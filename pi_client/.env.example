# Pi Client Configuration
# Copy this file to .env and update with your actual values

# Device identification
DEVICE_ID=cam1
DEVICE_TOKEN=default-insecure-token

# Cameras managed by this device
# Format: JSON array of camera IDs
# Example for single camera: CAMERAS=["cam1"]
# Example for multiple cameras: CAMERAS=["cam1","cam2","cam3"]
CAMERAS=["cam1"]

# Proxy connection
# Replace with your actual proxy server URL
PROXY_URL=ws://localhost:8000/ws/device/cam1

# Local storage
# Path to recordings directory
RECORDINGS_DIR=~/recordings

# WebSocket settings
RECONNECT_DELAY=5
PING_INTERVAL=30
PING_TIMEOUT=10

# File reading
CHUNK_SIZE=262144
